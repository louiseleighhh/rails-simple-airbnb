<nav class="navbar navbar-light bg-light px-3">
  <span class="navbar-brand mb-0 h1">Simple Airbnb</span>
  <div>
  <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary", type: "button" %>
  </div>
</nav>
<div class="card border-bottom-0">
      <div class="container p-3">
        <div class="row">
            <img src="<%= @flat.picture_url %>" alt="" class="w-100 rounded">
        </div>
      </div>
    </div>
    <div class="container mt-3" >
      <div class="row">
        <div class="col-md-8">
          <div class="card mb-3 p-3">
            <p><strong><%= @flat.name %></strong></p>
            <p><small><%= @flat.address %></small></p>
          </div>
          <div class="card mb-3 p-3">
            <p><strong>A bit more about this flat...</strong></p>
            <p><small><%= @flat.description %></small></p>
          </div>
          <div class="card mb-3 p-3">
            <p><strong>Details</strong></p>
            <span><%= @flat.number_of_guests%>
                <i class="fa-solid fa-user-group"></i>
                <%= @flat.price_per_night%>
                <i class="fa-solid fa-user-group"></i></span>
          </div>
          <div class="card-body">
            <%= link_to "Go Back", flats_path, class: "link-primary" %>
            <%= link_to "Delete", flat_path(@flat), method: :delete, data: {confirm: "Are you sure?"}, class: "link-danger"%>
          </div>
        </div>
        <div class="col-md-4">
              <!-- Book -->
              <div class="card mb-3 p-3">

                <h1>Book this place!</h1>

                <div class="d-flex justify-content-between mb-3">
                  <label for="start">From:</label>
                  <input type="date" id="start" name="trip-start">
                </div>

                <div class="d-flex justify-content-between mb-3">
                  <label for="start">To:</label>
                  <input type="date" id="start" name="trip-start">
                </div>

                <a href="#" class="btn btn-success mb-3">Book</a>
              </div>
              <!-- /book -->
              <div class="card mb-3 p-3 ">
                <div class="d-flex justify-content-between mb-3">
                  <h6>Share</h6>
                  <div class="sns">
                    <i class="fa-brands fa-facebook-square"></i>
                    <i class="fa-brands fa-twitter-square"></i>
                    <i class="fa-brands fa-pinterest-square"></i>
                    <i class="fa-solid fa-envelope"></i>
                  </div>
                </div>
              </div>
        </div>
      </div>
    </div>
